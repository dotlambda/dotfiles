# Font for window titles
font pango:ProFont 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# class border backgr indicator
client.focused $border $border $fg
client.unfocused $grey $grey $bg
client.focused_inactive $border $border $grey
client.urgent $alert $alert $bg

# Start i3lock with $mod+Escape
bindsym $mod+Escape exec i3lock

popup_during_fullscreen smart

# Move the current workspace to the next output
# (effectively toggles when you only have two outputs)
bindsym $mod+x move workspace to output right
